  "compilerOptions": {
    "module": "NodeNext",
    "noImplicitAny": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "ts-node": {
    "experimentalResolver": true
  },
  "include": ["src"]
}
