{
  "compilerOptions": {
    "module": "NodeNext",
    "noImplicitAny": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true
  },
  "include": ["src"]
}
